<article class="flex max-w-xl flex-col items-start justify-between">
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime="{{ post.date | dateIso }}" class="text-gray-500">
      {{ post.date | dateReadable }}
    </time>
  </div>
  <div class="group relative">
    <h3 class="mt-3 text-lg/6 font-semibold text-gray-900">
      {{ post.data.title }}
    </h3>
    <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">
      {{ post.data.description }}
    </p>
    <p class="mt-4">
      <a href="{{ post.url }}" class="text-sm font-semibold leading-6 text-indigo-600 hover:text-indigo-500">
        Read more <span aria-hidden="true">&rarr;</span>
      </a>
    </p>
  </div>
  <div class="relative mt-8 flex items-center gap-x-4">
    <img src="/assets/images/alex_profile.jpg" alt="{{ client.name }}" class="size-10 rounded-full bg-gray-50" />
    <div class="text-sm/6">
      <p class="font-semibold text-gray-900">
        {{ client.name }}
      </p>
      <p class="text-gray-600">Rails Developer</p>
    </div>
  </div>
</article>
